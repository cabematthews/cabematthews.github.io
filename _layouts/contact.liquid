---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>
</div>

<div class="post">
  <form action="https://submit-form.com/Ky8dRN3Dz" id="contact-form" name="contact-form">
    <div class="mb-1">
      <label class="form-label" for="name">Name</label>
      <input class="form-control" type="text" id="name" name="name" required="">
    </div>
    <div class="mb-1">
      <label class="form-label" for="email">Email</label>
      <input class="form-control" type="email" id="email" name="email" required="">
    </div>
    <div class="mb-1">
      <label class="form-label" for="message">Message</label><br>
      <textarea
        class="form-control"
        id="message"
        name="message"
        required=""
        rows="10"
      ></textarea>
    </div>
    <input
      type="hidden"
      name="_redirect"
      value="https://www.cabematthews.com/thanks"
    >
    <input type="hidden" name="_append" value="true">
    <button
      class="g-recaptcha btn btn-primary"
      type="submit"
      data-sitekey="6LeTGk8qAAAAAOtFCILYA5PaEs8O4UyKSpEKfXez"
      data-callback="onSubmit"
      data-action="submit"
    >
      Send
    </button>
  </form>
</div>

<!-- CAPTCHA - Use a callback function to handle the response token. -->
<script>
  function onSubmit(token) {
    document.getElementById('contact-form').submit();
  }
</script>
